<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My building checklist</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #232323;
      margin: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .checklist {
      background: black;
      color: #ffffff;
      padding: 5vw;
      border-radius: 12px;
      width: 80vw;
      max-width: 500px;
    }
    .checklist h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .task {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }
    .task input[type="checkbox"] {
    appearance: none;
    -webkit-appearance: none;
    width: 20px;
    height: 20px;
    border: 2px solid #555;
    border-radius: 4px;
    cursor: pointer;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    }

    .task input[type="checkbox"]:checked {
    background-color: #e73357;
    border-color: #e73357;
    }

    .task input[type="checkbox"]:checked::after {
    content: "✓";
    color: white;
    font-size: 16px;
    line-height: 1;
    }
  </style>
</head>
<body>
  <div class="checklist">
    <h2>Things to build</h2>
    <div id="taskList">Loading tasks...</div>
  </div>

  <script>
    const sheetURL = "https://opensheet.vercel.app/1a44LBM5mUujak28BVvU3YAfs5KUe5sd8QI-OkBXAiPk/list1"; 
    const STORAGE_KEY = "checklistStatus";

    const taskList = document.getElementById("taskList");

    // Load saved state from localStorage
    function loadSavedState() {
      const saved = localStorage.getItem(STORAGE_KEY);
      return saved ? JSON.parse(saved) : {};
    }

    function saveState(state) {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(state));
    }

    fetch(sheetURL)
      .then(res => res.json())
      .then(data => {
        taskList.innerHTML = ""; // "Loading..." text
        const savedState = loadSavedState();

        data.forEach((row, index) => {
          const taskText = row.builds; 
          if (!taskText) return;

          const taskDiv = document.createElement("div");
          taskDiv.className = "task";

          const checkbox = document.createElement("input");
          checkbox.type = "checkbox";
          checkbox.checked = savedState[taskText] || false;
          if (checkbox.checked) {
            taskDiv.classList.add("completed");
          }

          checkbox.addEventListener("change", () => {
            taskDiv.classList.toggle("completed", checkbox.checked);
            savedState[taskText] = checkbox.checked;
            saveState(savedState);
          });

          const label = document.createElement("label");
          label.textContent = taskText;

          taskDiv.appendChild(checkbox);
          taskDiv.appendChild(label);
          taskList.appendChild(taskDiv);
        });
      })
      .catch(err => {
        taskList.innerHTML = "⚠️ Error loading tasks.";
        console.error("Error fetching sheet:", err);
      });
  </script>
</body>
</html>
